<Window x:Class="Laba1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laba1"
        mc:Ignorable="d"
        Title="MainWindow" Height="183" Width="270">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="68,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Name="name_box"/>
        <PasswordBox HorizontalAlignment="Left" Margin="68,48,0,0" VerticalAlignment="Top" Width="120" Name="pass_box"/>
        <Label Content="Имя:" HorizontalAlignment="Left" Margin="27,12,0,0" VerticalAlignment="Top"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top"/>
        <Button Content="Войти" HorizontalAlignment="Left" Margin="108,80,0,0" VerticalAlignment="Top" Name="login_button" Click="login_button_Click"/>
        <Button Content="Гость" HorizontalAlignment="Left" Margin="108,105,0,0" VerticalAlignment="Top" Width="37" Name="Guest" Click="Guest_Click"/>

    </Grid>
</Window>
